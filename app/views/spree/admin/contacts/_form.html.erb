<div data-hook="admin_contact_form_fields">
  <%= f.field_container :email, class: ['form-group'], 'data-hook' => 'email' do %>
    <%= f.label :email, Spree.t(:email) %>
    <%= f.text_field :email, class: 'form-control' %>
    <%= f.error_message_on :email %>
  <% end %>

  <%= f.field_container :placed_orders_count, class: ['form-group'], 'data-hook' => 'placed_orders_count' do %>
    <%= f.label :placed_orders_count, Spree.t(:placed_orders_count) %>
    <%= f.number_field :placed_orders_count, class: 'form-control' %>
    <%= f.error_message_on :placed_orders_count %>
  <% end %>

  <%= f.field_container :avg_order_value, class: ['form-group'], 'data-hook' => 'avg_order_value' do %>
    <%= f.label :avg_order_value, Spree.t(:avg_order_value) %>
    <%= f.number_field :avg_order_value, class: 'form-control' %>
    <%= f.error_message_on :avg_order_value %>
  <% end %>

  <%= f.field_container :location, class: ['form-group'], 'data-hook' => 'location' do %>
    <%= f.label :location, Spree.t(:location) %>
    <%= f.text_field :location, class: 'form-control' %>
    <%= f.error_message_on :location %>
  <% end %>

  <%= f.field_container :email_lists, class: ['form-group'] do %>
    <%= f.label :email_list_ids, Spree.t(:email_lists) %>
    <%= f.select :email_list_ids, Spree::EmailList.pluck(:name, :id), {}, multiple: true, class: 'select2' %>
  <% end %>

</div>
